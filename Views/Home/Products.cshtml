@{
    ViewData["Title"] = "Categories";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DUTEG</title>

    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap">
    <link rel="preload" as="style" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <style>
        :root {
            --primary-color: #0ea5e9;
            --primary-hover: #0284c7;
            --accent-color: #f59e0b;
            --dark-bg: #0f172a;
            --darker-bg: #020617;
            --card-bg: rgba(30, 41, 59, 0.85);
            --card-hover: rgba(30, 41, 59, 0.95);
            --text-light: #f8fafc;
            --text-muted: #94a3b8;
            --border-radius: 16px;
            --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

        body {
            font-family: 'Inter', sans-serif;
            background: radial-gradient(circle at 10% 20%, var(--darker-bg) 0%, var(--dark-bg) 90%);
            color: var(--text-light);
            min-height: 100vh;
            margin: 0;
            padding: 0;
            position: relative;
            overflow-x: hidden;
        }

            body::before {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='rgba(255,255,255,0.03)' fill-rule='evenodd'/%3E%3C/svg%3E");
                z-index: -1;
            }

        .categories-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 80px 20px;
        }

        .page-header {
            text-align: center;
            margin-bottom: 50px; /* Reduced margin to accommodate search */
            position: relative;
        }

            .page-header::before {
                content: '';
                position: absolute;
                width: 100px;
                height: 100px;
                background: var(--primary-color);
                opacity: 0.15;
                filter: blur(40px);
                border-radius: 50%;
                top: -20px;
                left: 50%;
                transform: translateX(-50%);
                z-index: -1;
            }

        .categories-title {
            font-size: 3.2rem;
            font-weight: 700;
            letter-spacing: -0.5px;
            margin-bottom: 1rem; /* Reduced margin */
            background: linear-gradient(90deg, #ffffff, #38bdf8);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            position: relative;
            display: inline-block;
        }

            .categories-title::after {
                content: '';
                position: absolute;
                bottom: -10px; /* Adjusted bottom */
                left: 50%;
                transform: translateX(-50%);
                width: 80px;
                height: 4px;
                background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
                border-radius: 50px;
            }

        .page-subtitle {
            font-size: 1.1rem;
            color: var(--text-muted);
            max-width: 650px;
            margin: 0.5rem auto 0; /* Adjusted margin */
            line-height: 1.7;
            font-weight: 400;
        }

        .search-container {
            position: relative;
            margin-top: 30px;
            max-width: 400px;
            margin-left: auto;
            margin-right: auto;
        }

        #categorySearch {
            width: 100%;
            padding: 10px 35px 10px 15px;
            border: 1px solid var(--text-muted);
            border-radius: 50px;
            font-size: 1rem;
            color: var(--text-light); /* Ensure text is visible on dark background */
            background-color: rgba(255, 255, 255, 0.1); /* Subtle background for input */
            transition: border-color var(--transition);
        }

            #categorySearch:focus {
                outline: none;
                border-color: var(--primary-color);
                background-color: rgba(255, 255, 255, 0.2);
            }

            #categorySearch::placeholder {
                color: rgba(var(--text-muted-rgb), 0.8); /* Use RGB for opacity control */
            }

        .search-container i {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
        }

        .category-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(330px, 1fr));
            gap: 40px;
            margin-top: 40px; /* Add some space below the search */
        }

        .category-card {
            position: relative;
            border-radius: var(--border-radius);
            overflow: hidden;
            transition: var(--transition);
            background: var(--card-bg);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.08);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
            height: 300px;
        }

        .category-link {
            text-decoration: none;
            display: block;
            height: 100%;
        }

        .category-card:hover {
            transform: translateY(-12px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
            border-color: rgba(255, 255, 255, 0.15);
            background: var(--card-hover);
        }

        .category-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 100%;
            background: linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,0.8) 100%);
            z-index: 1;
            opacity: 0.7;
            transition: opacity 0.3s ease;
        }

        .category-card:hover::before {
            opacity: 0.5;
        }

        .category-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.7s ease;
        }

        .category-card:hover .category-image {
            transform: scale(1.08);
        }

        .category-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            padding: 25px;
            z-index: 2;
            transition: var(--transition);
        }

        .category-card:hover .category-overlay {
            transform: translateY(-10px);
        }

        .category-name {
            font-size: 1.6rem;
            font-weight: 600;
            color: white;
            margin-bottom: 10px;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
            transition: var(--transition);
        }

        .category-card:hover .category-name {
            transform: translateY(-5px);
        }

        .category-count {
            font-size: 0.9rem;
            color: var(--text-muted);
            display: flex;
            align-items: center;
            transition: var(--transition);
        }

            .category-count i {
                margin-right: 8px;
                color: var(--accent-color);
            }

        .category-card:hover .category-count {
            transform: translateY(-5px);
        }

        .view-products-btn {
            position: absolute;
            bottom: 25px;
            right: 25px;
            background: var(--primary-color);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 50px;
            font-size: 0.85rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            opacity: 0;
            transform: translateY(15px);
            transition: var(--transition);
            box-shadow: 0 5px 15px rgba(14, 165, 233, 0.3);
            z-index: 3;
        }

        .category-card:hover .view-products-btn {
            opacity: 1;
            transform: translateY(0);
        }

        .view-products-btn:hover {
            background: var(--primary-hover);
            transform: translateY(-3px) !important;
            box-shadow: 0 8px 20px rgba(14, 165, 233, 0.4);
        }

        /* Shimmer effect */
        .shimmer {
            position: relative;
            overflow: hidden;
        }

            .shimmer::after {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: linear-gradient( to right, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.05) 50%, rgba(255, 255, 255, 0) 100% );
                transform: rotate(30deg);
                animation: shimmerEffect 4s infinite;
                z-index: 1;
                pointer-events: none;
            }

        @@keyframes shimmerEffect {
            0% {
                transform: rotate(30deg) translateX(-100%);
            }

            100% {
                transform: rotate(30deg) translateX(100%);
            }
        }

        /* Badge */
        .category-badge {
            position: absolute;
            top: 20px;
            left: 20px;
            background: var(--accent-color);
            color: white;
            font-size: 0.75rem;
            font-weight: 600;
            padding: 5px 12px;
            border-radius: 30px;
            z-index: 2;
            opacity: 0;
            transform: translateY(-10px);
            transition: var(--transition);
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
        }

        .category-card:hover .category-badge {
            opacity: 1;
            transform: translateY(0);
        }

        /* Responsive Adjustments */
        @@media (max-width: 992px) {
            .categories-title {
                font-size: 2.7rem;
            }

            .category-grid {
                gap: 30px;
            }
        }

        @@media (max-width: 768px) {
            .categories-container {
                padding: 60px 15px;
            }

            .categories-title {
                font-size: 2.2rem;
                letter-spacing: -0.3px;
            }

            .page-subtitle {
                font-size: 1rem;
            }

            .category-grid {
                grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
                gap: 25px;
            }

            .category-card {
                height: 260px;
            }
        }

        @@media (max-width: 576px) {
            .categories-title {
                font-size: 1.9rem;
            }

            .category-grid {
                grid-template-columns: 1fr;
            }

            .category-name {
                font-size: 1.4rem;
            }

            .category-card {
                height: 240px;
            }
        }
    </style>
</head>

<body>
    <div class="categories-container">
        <div class="page-header" data-aos="fade-down">
            <h1 class="categories-title shimmer">@ViewData["Title"]</h1>
            <p class="page-subtitle">Discover our curated collection of premium kitchen essentials designed to elevate your cooking experience</p>
            <div class="search-container mt-3">
                <input type="text" id="categorySearch" placeholder="Search Categories...">
                <i class="fas fa-search"></i>
            </div>
        </div>

        <div class="category-grid" id="categoryGrid">
            <div class="category-card" data-aos="fade-up" data-aos-delay="100">
                <a href="/Products/Pots" class="category-link">
                    <img src="@Url.Content("~/images/pots1.jpg")" alt="Pots" class="category-image">
                    <span class="category-badge">Best Sellers</span>
                    <div class="category-overlay">
                        <h3 class="category-name">Premium Pots</h3>
                        <span class="category-count"><i class="fas fa-box-open"></i> 24 products</span>
                    </div>
                    <button class="view-products-btn">Browse Collection</button>
                </a>
            </div>

            <div class="category-card" data-aos="fade-up" data-aos-delay="200">
                <a href="/Products/AirFryers" class="category-link">
                    <img src="@Url.Content("~/images/airfryer1.jpg")" alt="Air Fryers" class="category-image">
                    <span class="category-badge">New Arrivals</span>
                    <div class="category-overlay">
                        <h3 class="category-name">Air Fryers</h3>
                        <span class="category-count"><i class="fas fa-box-open"></i> 18 products</span>
                    </div>
                    <button class="view-products-btn">Browse Collection</button>
                </a>
            </div>

            <div class="category-card" data-aos="fade-up" data-aos-delay="300">
                <a href="/Products/PressureCookers" class="category-link">
                    <img src="@Url.Content("~/images/PC1.jpg")" alt="Pressure Cookers" class="category-image">
                    <div class="category-overlay">
                        <h3 class="category-name">Pressure Cookers</h3>
                        <span class="category-count"><i class="fas fa-box-open"></i> 15 products</span>
                    </div>
                    <button class="view-products-btn">Browse Collection</button>
                </a>
            </div>

            <div class="category-card" data-aos="fade-up" data-aos-delay="400">
                <a href="/Products/DishRacks" class="category-link">
                    <img src="@Url.Content("~/images/dishrack1.jpg")" alt="Dish Racks" class="category-image">
                    <div class="category-overlay">
                        <h3 class="category-name">Dish Racks</h3>
                        <span class="category-count"><i class="fas fa-box-open"></i> 12 products</span>
                    </div>
                    <button class="view-products-btn">Browse Collection</button>
                </a>
            </div>

            <div class="category-card" data-aos="fade-up" data-aos-delay="500">
                <a href="/Products/Cutleries" class="category-link">
                    <img src="@Url.Content("~/images/cutlery2.jpg")" alt="Cutleries" class="category-image">
                    <span class="category-badge">Premium</span>
                    <div class="category-overlay">
                        <h3 class="category-name">Cutleries</h3>
                        <span class="category-count"><i class="fas fa-box-open"></i> 32 products</span>
                    </div>
                    <button class="view-products-btn">Browse Collection</button>
                </a>
            </div>

            <div class="category-card" data-aos="fade-up" data-aos-delay="600">
                <a href="/Products/Blenders" class="category-link">
                    <img src="@Url.Content("~/images/blender1.jpg")" alt="Blenders" class="category-image">
                    <div class="category-overlay">
                        <h3 class="category-name">Blenders</h3>
                        <span class="category-count"><i class="fas fa-box-open"></i> 20 products</span>
                    </div>
                    <button class="view-products-btn">Browse Collection</button>
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            once: true,
            duration: 1000,
            easing: 'ease-out-cubic'
        });

        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('categorySearch');
            const categoryCards = document.querySelectorAll('.category-card');

            searchInput.addEventListener('keyup', function() {
                const searchTerm = searchInput.value.toLowerCase();

                categoryCards.forEach(card => {
                    const categoryNameElement = card.querySelector('.category-name');
                    if (categoryNameElement) {
                        const categoryName = categoryNameElement.textContent.toLowerCase();
                        if (categoryName.includes(searchTerm)) {
                            card.style.display = 'grid'; // Or 'block', 'flex' depending on your grid setup
                        } else {
                            card.style.display = 'none';
                        }
                    }
                });
            });
        });
    </script>
</body>
</html>
