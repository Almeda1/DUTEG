@{
    ViewData["Title"] = "Contact";
}

<head>
    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts (Poppins) -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
</head>

<body class="contact-page">
    <div class="container py-5 modern-container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card modern-card shadow-lg">
                    <div class="card-body p-5 text-center text-white">
                        <h1 class="fw-bold modern-title mb-4">Contact Us</h1>
                        <p class="modern-text mb-4">You can reach us via the following methods:</p>
                        <ul class="list-unstyled contact-list">
                            <li class="mb-3">
                                <i class="fab fa-whatsapp modern-icon me-2" style="color: #25D366;"></i>
                                <a href="https://wa.me/2348060173519" target="_blank" class="modern-link">+2348060173519 (WhatsApp)</a>
                            </li>
                            <li class="mb-3">
                                <i class="fas fa-phone modern-icon me-2" style="color: #4a90e2;"></i>
                                <a href="tel:+2348064035438" class="modern-link">+2348064035438</a>
                            </li>
                            <li class="mb-3">
                                <i class="fas fa-envelope modern-icon me-2" style="color: #e0e0e0;"></i>
                                <a href="mailto:dorothy2Real@gmail.com" class="modern-link">dorothy2Real@gmail.com</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

<style>
    body.contact-page {
        background: linear-gradient(135deg, #1a1a1a, #2d2d2d);
        color: #fff;
        font-family: 'Poppins', sans-serif;
        min-height: 100vh;
        /* Removed padding-top: 80px; to fix space above navbar */
        margin: 0; /* Added to ensure no default margins */
    }

    .modern-container {
        max-width: 1400px;
    }

    .modern-card {
        background: rgba(34, 34, 34, 0.95); /* Matches RefundPolicy */
        border-radius: 15px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .modern-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
        }

    .modern-title {
        font-size: 2.5rem;
        font-weight: 700;
        letter-spacing: 1.5px;
        color: #fff;
        text-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    .modern-text {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #d0d0d0;
    }

    .contact-list {
        padding: 0;
    }

        .contact-list li {
            font-size: 1.25rem;
            line-height: 1.6;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px; /* Space between icon and text */
        }

    .modern-icon {
        font-size: 1.5rem;
        transition: transform 0.3s ease;
    }

    .modern-link {
        color: #fff;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
    }

        .modern-link:hover {
            color: #4a90e2; /* Softer blue on hover */
            text-decoration: underline;
        }

    .contact-list li:hover .modern-icon {
        transform: scale(1.2); /* Subtle icon animation */
    }

    @@media (max-width: 768px) {
        .modern-title

    {
        font-size: 2rem;
    }

    .modern-text {
        font-size: 1rem;
    }

    .contact-list li {
        font-size: 1.1rem;
    }

    .modern-icon {
        font-size: 1.25rem;
    }

    .card-body {
        padding: 3rem;
    }

    }

    @@media (max-width: 576px) {
        .modern-title

    {
        font-size: 1.75rem;
    }

    .modern-text {
        font-size: 0.95rem;
    }

    .contact-list li {
        font-size: 1rem;
    }

    .modern-icon {
        font-size: 1.1rem;
    }

    .card-body {
        padding: 2rem;
    }

    }
</style>