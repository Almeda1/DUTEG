@{
    ViewData["Title"] = "Contact Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DUTEG</title>

    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap">
    <link rel="preload" as="style" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        :root {
            --primary-color: #0ea5e9;
            --primary-hover: #0284c7;
            --accent-color: #f59e0b;
            --dark-bg: #0f172a;
            --darker-bg: #020617;
            --card-bg: rgba(255, 255, 255, 0.98);
            --text-light: #f8fafc;
            --text-dark: #1e293b;
            --text-muted: #64748b;
            --danger-color: #ef4444;
            --success-color: #10b981;
            --border-radius: 16px;
            --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

        body.contact-page {
            font-family: 'Inter', sans-serif;
            background: radial-gradient(circle at 10% 20%, var(--darker-bg) 0%, var(--dark-bg) 90%);
            color: var(--text-light);
            min-height: 100vh;
            margin: 0;
            padding: 0;
            position: relative;
            overflow-x: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            body.contact-page::before {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='rgba(255,255,255,0.03)' fill-rule='evenodd'/%3E%3C/svg%3E");
                z-index: -1;
            }

        .contact-container {
            max-width: 1000px; /* Adjust as needed */
            width: 100%;
            padding: 80px 20px;
        }

        .contact-card {
            background: var(--card-bg);
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.25);
            border: 1px solid rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            position: relative;
        }

            .contact-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 5px;
                background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
                border-radius: 50px; /* To make it a smooth line */
            }

        .card-body {
            padding: 3rem;
            color: var(--text-dark); /* Ensure text is readable on the light background */
            text-align: center; /* Center the content */
        }

        .contact-title {
            font-size: 2.5rem;
            font-weight: 700;
            letter-spacing: -0.5px;
            margin-bottom: 2rem;
            background: linear-gradient(90deg, var(--primary-color), var(--dark-bg));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            position: relative;
            display: inline-block;
        }

            .contact-title::after {
                content: '';
                position: absolute;
                bottom: -12px;
                left: 50%; /* Center the underline */
                transform: translateX(-50%); /* Adjust for centering */
                width: 60px;
                height: 4px;
                background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
                border-radius: 50px;
            }

        .contact-text {
            font-size: 1.1rem;
            line-height: 1.8;
            color: var(--text-dark);
            margin-bottom: 2rem;
        }

        .contact-list {
            padding: 0;
            list-style-type: none;
            margin-bottom: 2rem;
        }

            .contact-list li {
                font-size: 1.2rem;
                margin-bottom: 1.5rem;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 15px;
            }

        .contact-icon {
            font-size: 1.5rem;
            color: var(--primary-color);
        }

        .contact-link {
            color: var(--text-dark);
            text-decoration: none;
            font-weight: 500;
            transition: color var(--transition);
        }

            .contact-link:hover {
                color: var(--primary-color);
                text-decoration: underline;
            }

        .contact-btn {
            padding: 12px 30px;
            border-radius: 50px;
            background: linear-gradient(90deg, var(--primary-color), var(--primary-hover));
            border: none;
            color: #fff;
            font-size: 1rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            margin-top: 1.5rem;
            transition: var(--transition);
            box-shadow: 0 4px 10px rgba(14, 165, 233, 0.3);
            display: inline-flex;
            align-items: center;
            text-decoration: none; /* Remove underline from link */
        }

            .contact-btn:hover {
                background: linear-gradient(90deg, var(--primary-hover), var(--primary-color));
                transform: translateY(-3px);
                box-shadow: 0 6px 15px rgba(14, 165, 233, 0.4);
                color: white;
            }

        .btn-icon {
            margin-right: 10px;
            font-size: 1.1rem;
        }
    </style>
</head>

<body class="contact-page">
    <div class="contact-container">
        <div class="contact-card" data-aos="fade-up">
            <div class="card-body">
                <div class="policy-header" data-aos="fade-down">
                    <h1 class="contact-title shimmer">Contact Us</h1>
                    <p class="contact-text">We're here to help! Reach out to us through the following methods:</p>
                </div>

                <ul class="contact-list">
                    <li data-aos="fade-left" data-aos-delay="100">
                        <i class="fab fa-whatsapp contact-icon" style="color: #25D366;"></i>
                        <a href="https://wa.me/2348060173519" target="_blank" class="contact-link">+2348060173519 (WhatsApp)</a>
                    </li>
                    <li data-aos="fade-left" data-aos-delay="200">
                        <i class="fas fa-phone contact-icon"></i>
                        <a href="tel:+2348064035438" class="contact-link">+2348064035438</a>
                    </li>
                    <li data-aos="fade-left" data-aos-delay="300">
                        <i class="fas fa-envelope contact-icon"></i>
                        <a href="mailto:dorothy2Real@gmail.com" class="contact-link">dorothy2Real@gmail.com</a>
                    </li>
                </ul>

                <div class="text-center" data-aos="fade-up" data-aos-delay="400">
                    <a href="/Home" class="contact-btn">
                        <i class="fas fa-home btn-icon"></i> Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            once: true,
            duration: 1000,
            easing: 'ease-out-cubic'
        });
    </script>
</body>
</html>