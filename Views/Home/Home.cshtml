@{
    ViewData["Title"] = "DUTEG";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Premium Retail Solutions</title>

    <!-- Preload Assets -->
    <link rel="preload" as="image" href="/images/homebackground1.jpg">
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- AOS Animation -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
</head>

<body>
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="overlay"></div>
        <div class="container">
            <div class="hero-content">
                <!-- Main Title -->
                <div class="title-wrapper" data-aos="fade-down" data-aos-duration="800">
                    <h1 class="main-title">
                        <span class="title-text">DUTEG</span>
                    </h1>
                    <p class="tagline" data-aos="fade-up" data-aos-delay="300">Premium Retail Solutions</p>
                </div>

                <!-- Info Cards Grid -->
                <div class="info-grid">
                    <!-- Hours Card -->
                    <div class="info-card" data-aos="fade-right" data-aos-delay="400">
                        <div class="card-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <h2>Business Hours</h2>
                        <div class="card-content">
                            <p><strong>Monday - Saturday</strong></p>
                            <p>8:00 AM - 6:00 PM</p>
                        </div>
                    </div>

                    <!-- Location Card -->
                    <div class="info-card" data-aos="fade-left" data-aos-delay="600">
                        <div class="card-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <h2>Our Location</h2>
                        <div class="card-content">
                            <p>GQG6+F3Q, Okumagba 2</p>
                            <p>Warri 332104, Delta</p>
                        </div>
                        <div class="map-container">
                            <iframe width="100%" height="100%" frameborder="0" style="border:0" loading="lazy" allowfullscreen
                                    aria-label="Google Map of DUTEG Location"
                                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3939.098276789956!2d5.759673373622633!3d5.528896294769962!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1041adf47c5e8c31%3A0x992ec791f68a3f6!2sGQG6%2BF3Q%2C%20Okumagba%202%2C%20Warri%20332104%2C%20Delta%2C%20Nigeria!5e0!3m2!1sen!2sng!4v1711023456789!5m2!1sen!2sng">
                            </iframe>
                        </div>
                    </div>
                </div>

                <!-- CTA Button -->
                <div class="cta-wrapper" data-aos="fade-up" data-aos-delay="800">
                    <a href="/Home/Products" class="btn btn-primary btn-lg cta-button" role="button" aria-label="Explore Products">
                        <span>Explore Products</span>
                        <i class="fas fa-chevron-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        // Initialize animations
        AOS.init({
            once: true,
            duration: 800,
            easing: 'ease-out-quart'
        });
    </script>
</body>
</html>

<style>
    :root {
        /* Updated colors for better vibrancy */
        --primary-color: #2563eb;
        --primary-light: #3b82f6;
        --text-light: #f8fafc;
        --text-muted: #94a3b8;
        --dark-overlay: rgba(0, 0, 0, 0.75);
        --card-bg: rgba(15, 23, 42, 0.9);
        --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    }

    body {
        font-family: 'Poppins', sans-serif;
        color: var(--text-light);
        overflow-x: hidden;
    }

    .hero-section {
        position: relative;
        min-height: 100vh;
        background: url('/images/homebackground1.jpg') no-repeat center center;
        background-size: cover;
        display: flex;
        align-items: center;
        padding: 2rem;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: var(--dark-overlay);
        backdrop-filter: blur(4px);
    }

    .container {
        z-index: 2;
    }

    .title-text {
        background: linear-gradient(135deg, #ffffff 0%, #e0f2fe 100%);
        -webkit-background-clip: text;
        color: transparent;
    }

    .info-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 30px rgba(0, 0, 0, 0.4);
    }

    .cta-button:hover i {
        transform: translateX(8px);
    }

    @@media (max-width: 768px) {
        .main-title

    {
        font-size: 3.5rem;
    }

    .info-grid {
        grid-template-columns: 1fr;
    }

    }

    @@media (max-width: 576px) {
        .hero-section

    {
        padding: 1rem;
    }

    .main-title {
        font-size: 2.75rem;
    }

    }
</style>