@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Product Management";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #1a1a1a, #2d2d2d);
            color: #fff;
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
            margin: 0;
        }

        .logout-bar {
            width: 100%;
            display: flex;
            justify-content: center;
            padding: 10px 20px;
            background: rgba(30, 30, 30, 0.9);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .container {
            max-width: 1200px;
            margin: 1rem auto;
            padding: 0 15px;
        }

        .animate-header {
            animation: fadeInDown 0.8s ease-in-out;
        }

        .modern-card {
            background: linear-gradient(135deg, #2d2d2d 0%, #1f1f1f 100%);
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            margin-top: 1rem;
        }

            .modern-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
            }

        .product-img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease;
        }

            .product-img:hover {
                transform: scale(1.1);
            }

        .modern-btn {
            padding: 8px 16px;
            border-radius: 25px;
            text-transform: uppercase;
            font-weight: 600;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            touch-action: manipulation;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                transform: translateY(-2px);
            }

        .btn-warning {
            background-color: #ffc107;
            border: none;
            color: #1a1a1a;
        }

            .btn-warning:hover {
                background-color: #d39e00;
                transform: translateY(-2px);
            }

        .btn-danger {
            background-color: #dc3545;
            border: none;
        }

            .btn-danger:hover {
                background-color: #b02a37;
                transform: translateY(-2px);
            }

        .btn-outline-light {
            border: 2px solid #fff;
            color: #fff;
            background: transparent;
        }

            .btn-outline-light:hover {
                background-color: #fff;
                color: #1a1a1a;
                transform: translateY(-2px);
            }

        .card-body p {
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .card-body .text-muted {
            color: rgba(255, 255, 255, 0.6) !important;
        }

        .empty-state {
            max-width: 500px;
            margin: 3rem auto;
            padding: 2rem;
            background: linear-gradient(135deg, #2d2d2d 0%, #1f1f1f 100%);
            border-radius: 20px;
            text-align: center;
            animation: fadeIn 0.8s ease-in-out;
        }

        .header-actions {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1050;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.7);
        }

        .modal-content {
            background-color: #222;
            margin: 10% auto;
            padding: 20px;
            border-radius: 10px;
            width: 80%;
            max-width: 500px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
            animation: modalFadeIn 0.3s;
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-bottom: 15px;
            border-bottom: 1px solid #444;
        }

        .modal-title {
            margin: 0;
            font-size: 1.3rem;
            font-weight: bold;
            color: #fff;
        }

        .close-button {
            color: #aaa;
            font-size: 28px;
            font-weight: bold;
            background: none;
            border: none;
            cursor: pointer;
        }

            .close-button:hover {
                color: #fff;
            }

        .modal-body {
            padding: 20px 0;
            color: #eee;
        }

        .modal-footer {
            display: flex;
            justify-content: flex-end;
            padding-top: 15px;
            border-top: 1px solid #444;
            gap: 10px;
        }

        /* Style for making modal buttons the same size */
        .same-size-btn {
            min-width: 80px; /* Adjust this value as needed */
            text-align: center;
        }

        @@keyframes fadeInDown {
            0% {
                opacity: 0;
                transform: translateY(-20px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeIn {
            0% {
                opacity: 0;
            }

            100% {
                opacity: 1;
            }
        }

        @@keyframes modalFadeIn {
            from {
                opacity: 0;
                transform: translateY(-50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@media (max-width: 768px) {
            .modal-content {
                width: 90%;
                margin: 20% auto;
            }
        }

        @@media (max-width: 576px) {
            .container {
                padding: 0 10px;
            }

            .modern-card {
                margin-bottom: 1rem;
            }

            .product-img {
                width: 50px;
                height: 50px;
            }

            .card-body {
                padding: 1rem;
            }

                .card-body h5 {
                    font-size: 1rem;
                }

                .card-body p {
                    font-size: 0.85rem;
                }

            .modern-btn {
                padding: 6px 12px;
                font-size: 0.8rem;
            }

            .btn-sm {
                padding: 5px 10px;
                font-size: 0.75rem;
            }

            .header-actions {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.5rem;
            }

            .modal-content {
                margin: 30% auto;
                width: 95%;
            }
        }
    </style>
</head>
<body>
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="logout-bar">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Home", "Home", new { area = "" })" method="post" id="logoutForm">
                <button type="submit" class="btn btn-outline-light modern-btn">
                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                </button>
            </form>
        </div>
    }

    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
            <h1 class="h3 mb-0 fw-bold text-white animate-header">Product Management</h1>
            <div class="header-actions">
                <a asp-action="AddProduct" class="btn btn-primary modern-btn">
                    <i class="fas fa-plus me-2"></i>Add Product
                </a>
            </div>
        </div>

        @if (Model.Any())
        {
            <div class="row g-3">
                @foreach (var item in Model)
                {
                    <div class="col-6 col-md-6 col-lg-4">
                        <div class="modern-card h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-2">
                                    <img src="@item.ImageUrl" alt="@item.Name" class="product-img me-2" />
                                    <h5 class="card-title mb-0 fw-bold text-truncate">@item.Name</h5>
                                </div>
                                <p class="text-muted">Brand: @item.Brand</p>
                                <p class="text-muted">Price: ₦@item.Price.ToString("N2")</p>
                                <p class="text-muted">Category: @item.Category</p>
                            </div>
                            <div class="card-footer bg-transparent border-0 text-end">
                                <a asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-warning btn-sm modern-btn me-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button type="button" class="btn btn-danger btn-sm modern-btn delete-btn" data-id="@item.Id" data-name="@item.Name">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-box-open fa-3x mb-3 text-muted"></i>
                <h3 class="fw-bold">No Products Found!</h3>
                <p class="text-muted">It looks like there are no products to manage yet.</p>
                <a asp-action="AddProduct" class="btn btn-primary modern-btn mt-3">
                    <i class="fas fa-plus me-2"></i>Add Product Now
                </a>
            </div>
        }

        <div id="deleteModal" class="modal">
            <div class="modal-content bg-dark text-white border border-danger shadow-lg">
                <form id="deleteForm">
                    <div class="modal-header border-0">
                        <h5 class="modal-title fw-bold text-danger">
                            <i class="fas fa-triangle-exclamation me-2"></i> Confirm Deletion
                        </h5>
                    </div>
                    <div class="modal-body">
                        <p class="fs-6">You're about to delete <strong><span id="productName"></span></strong>.</p>
                        <p class="text-danger mb-0">This action is permanent and cannot be undone.</p>
                    </div>
                    <div class="modal-footer border-0 d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-outline-light modern-btn close-button">
                            <i class="fas fa-times me-1"></i> Cancel
                        </button>
                        <button type="button" id="confirmDelete" class="btn btn-danger modern-btn">
                            <i class="fas fa-trash-alt me-1"></i> Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>

    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            var productIdToDelete = null;
            var deleteModal = $('#deleteModal');

            // Set up click handler for delete buttons
            $(document).on('click', '.delete-btn', function() {
                productIdToDelete = $(this).data('id');
                var productName = $(this).data('name');
                $('#productName').text(productName);
                deleteModal.show();
            });

            // Close modal when close button is clicked
            $(document).on('click', '.close-button', function() {
                deleteModal.hide();
            });

            // Close modal when clicking outside the modal
            $(window).on('click', function(event) {
                if (event.target == deleteModal[0]) {
                    deleteModal.hide();
                }
            });

            // Handle the delete confirmation
            $('#confirmDelete').on('click', function() {
                if (productIdToDelete) {
                    // Perform the delete action via AJAX
                    $.ajax({
                        url: '/Admin/DeleteProduct/' + productIdToDelete,
                        type: 'POST',
                        headers: {
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function(result) {
                            if (result.success) {
                                // Reload the page to see changes
                                location.reload();
                            } else {
                                alert('Error: ' + result.message);
                            }
                        },
                        error: function(xhr, status, error) {
                            alert('Error: ' + error);
                        }
                    });
                    deleteModal.hide();
                }
            });
        });
    </script>
</body>
</html>